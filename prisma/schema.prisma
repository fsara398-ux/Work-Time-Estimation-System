// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String   // "PM" or "ENGINEER"
  tasks     Task[]
  createdAt DateTime @default(now())
}


model Task {
  id             Int      @id @default(autoincrement())
  title          String
  description    String?
  estimatedHours Float?
  userId         Int
  user           User     @relation(fields: [userId], references: [id])
  createdAt      DateTime @default(now())
}

model CompanySetting {
  id        Int @id @default(autoincrement())
  startHour Int
  endHour   Int
}



model RecurringHoliday {
  id     Int    @id @default(autoincrement())
  month  Int
  day    Int
  reason String?
}

model OneTimeHoliday {
  id     Int    @id @default(autoincrement())
  date   DateTime
  reason String?
}
